<div class="container">
	<form class="form-submit" action="/submit" method="POST">
		<H1>Patternform Scraper</H1>

	    <div class="form-group">

			<h3>1. Enter your details</h3>

	        <input type="email" name="inputEmail" class="form-control" id="inputEmail" placeholder="Email">     
	        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password">
	    </div>

		<div class="form-group">

			<h3>2. Choose your card type</h3>

	        <div class="radio">
			  <label><input type="radio" name="optradio">PatternForm</label>
			</div>
			<div class="radio">
			  <label><input type="radio" name="optradio">MoneyForm</label>
			</div>
	    </div>

		<div class="form-group">

			<h3>3. Select date</h3>

	        <input type="date" class="form-control" id="inputDate" name="date" placeholder="dd/mm/yyyy">
	    </div>

		<div class="loginControl">
			<button type="submit" class="btn btn-lg btn-primary btn-block">Go</button>
		</div>
	    
	</form>

</div>